    "version": "0.2.0",
    "configurations": [
		{
			"name": "Attach to Process",
			"type": "go",
			"asRoot": true,
			"mode": "local",
            "request": "attach",
			"console": "integratedTerminal",
			"remotePath": "",	
			"showLog": true,
			"cwd": "${workspaceFolder}",
			"substitutePath": [
				{
					"from": "/home/tom/go/",
					"to": "/go/",
				}
			]
		}
    ]
}
